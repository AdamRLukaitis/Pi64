MEMORY
{
    ram : ORIGIN = 0x8000, LENGTH = 0x100000
}

SECTIONS
{
	.text : { *(.text*) } >ram
	.bss : {
	__bss_start__ = .;
	*(.bss*) } > ram
	__bss_end__ = .;
	__bss_size__ = __bss_end__ - __bss_start__;
	.rodata : { *(.rodata*) } > ram
	__data_rom_start__ = .;
	.data : {
	__data_start__ = .;
	*(.data*)
	} > ram
	__data_end__ = .;
	__data_size__ = __data_end__ - __data_start__;
	/DISCARD/ : {
                *(.comment)
		*(.ARM.attributes)
        }	
}

